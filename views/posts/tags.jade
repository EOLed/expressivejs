extends ../layout

block content
  .container
    .row
      .span8.offset2
        h1 Tags
    each posts, tag in postsByTag
      .row
        .span8.offset2 
          ul#tagList 
            li ##{tag}
              ul
                each post, index in posts
                  li 
                    i.icon-caret-right
                    a(href=url(post), title=post.title, alt=post.title) #{post.title}
                    span.created  #{fromNow(post.created)}

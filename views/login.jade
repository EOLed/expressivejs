extends layout

block content
  .container
    .row
      .span6
        h1 Login
        form.form-horizontal(method='post', action='/login', name='loginForm')
          .control-group
            label.control-label(for='username') Username
            .controls
              input(type='text', name='username', placeholder='Username')
          .control-group
            label.control-label(for='password') Password
            .controls
              input(type='password', name='password', placeholder='Password')
          .form-actions
            input.btn.btn-primary(type='submit') Login
